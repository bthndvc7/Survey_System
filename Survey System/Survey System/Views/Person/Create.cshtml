
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="card-title">Kişi Kaydı Ekleme</div>
        <hr>
        <form action="/Person/Create">
            <div class="form-group">
                <label for="input-1">Ad Soyad</label>
                <input type="text" class="form-control" name="NAMESURNAME" id="input-1" placeholder="Ad Soyad Giriniz." maxlength="50" required>
            </div>
            <div class="form-group">
                <label for="input-2">Kullanıcı Kodu</label>
                <input type="text" class="form-control" name="CODE" id="input-2" placeholder="Kod Giriniz." maxlength="10" required>
            </div>
            <div class="form-group">
                <label for="input-3">Şifre</label>
                <input type="password" class="form-control" name="PASSWORD" id="input-3" placeholder="Şifre Giriniz." maxlength="20" required>
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-tumblr text-white"><i class="icon-tag"></i> Kaydet</button>
            </div>
        </form>
    </div>
</div>
